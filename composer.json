{
    "name": "frostybee/slim-mvc",
    "description": "An MVC-based web application project template that uses the Slim PHP microframework.",
    "type": "project",
    "license": "MIT",
    "keywords": [
        "php",
        "slim-framework-mvc",
        "slim-mvc-skeleton",
        "mvc-php",
        "slim4",
        "slim"
    ],
    "authors": [
        {
            "name": "frostybee"
        }
    ],
    "require": {
        "php": "8.2.* || 8.3.* || 8.4.*",
        "ext-pdo": "*",
        "ext-json": "*",
        "slim/slim": "^4.14",
        "slim/php-view": "^3.4",
        "php-di/php-di": "^7.0",
        "fig/http-message-util": "^1.1",
        "monolog/monolog": "^3.9",
        "slim/psr7": "^1.8"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public public/index.php",
        "post-create-project-cmd": [
            "@php -r \"file_exists('config/env.php') || copy('config/env.example.php', 'config/env.php');\""
        ]
    }
}
